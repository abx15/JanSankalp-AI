// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CITIZEN
  OFFICER
  STATE_ADMIN
  DISTRICT_ADMIN
  CITY_ADMIN
  ADMIN // System Global Admin
}

enum ComplaintStatus {
  PENDING
  RESUMED
  IN_PROGRESS
  RESOLVED
  REJECTED
}

model User {
  id            String      @id @default(cuid())
  name          String?
  email         String      @unique
  password      String?
  emailVerified DateTime?
  role          Role        @default(CITIZEN)
  points        Int         @default(0)
  phone         String?
  address       String?
  bio           String?
  latitude      Float?
  longitude     Float?
  avatarUrl     String?
  
  // Tenancy
  state         State?      @relation(fields: [stateId], references: [id])
  stateId       String?
  district      District?   @relation(fields: [districtId], references: [id])
  districtId    String?
  city          City?       @relation(fields: [cityId], references: [id])
  cityId        String?
  ward          Ward?       @relation(fields: [wardId], references: [id])
  wardId        String?

  complaints    Complaint[]
  assignedTasks Complaint[] @relation("AssignedTo")
  managedDept   Department? @relation("DeptHead")
  notifications Notification[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model State {
  id        String     @id @default(cuid())
  name      String     @unique
  districts District[]
  users     User[]
  complaints Complaint[]
}

model District {
  id        String     @id @default(cuid())
  name      String
  state     State      @relation(fields: [stateId], references: [id])
  stateId   String
  cities    City[]
  users     User[]
  complaints Complaint[]

  @@unique([name, stateId])
}

model City {
  id         String     @id @default(cuid())
  name       String
  district   District   @relation(fields: [districtId], references: [id])
  districtId String
  wards      Ward[]
  users      User[]
  complaints Complaint[]

  @@unique([name, districtId])
}

model Ward {
  id         String     @id @default(cuid())
  name       String
  city       City       @relation(fields: [cityId], references: [id])
  cityId     String
  users      User[]
  complaints Complaint[]

  @@unique([name, cityId])
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model Complaint {
  id                  String          @id @default(cuid())
  ticketId            String          @unique
  title               String
  description         String
  originalText        String?
  originalLanguage    String?
  translatedText      String?
  status              ComplaintStatus @default(PENDING)
  severity            Int             @default(1) // 1-5
  category            String
  confidenceScore     Float?
  imageUrl            String?
  latitude            Float
  longitude           Float
  author              User            @relation(fields: [authorId], references: [id])
  authorId            String
  assignedTo          User?           @relation("AssignedTo", fields: [assignedToId], references: [id])
  assignedToId        String?
  department          Department?     @relation(fields: [departmentId], references: [id])
  departmentId        String?
  
  // Tenancy (denormalized for sharding & performance)
  state               State?          @relation(fields: [stateId], references: [id])
  stateId             String?
  district            District?       @relation(fields: [districtId], references: [id])
  districtId          String?
  city                City?           @relation(fields: [cityId], references: [id])
  cityId              String?
  ward                Ward?           @relation(fields: [wardId], references: [id])
  wardId              String?

  remarks             Remark[]
  notifications       Notification[]
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  duplicateOf         String?
  receiptId           String?         @unique
  
  // AI Governance Fields
  aiAnalysis          Json?           // Stores classification, confidence, category, reasoning
  spamScore           Float?          @default(0)
  isDuplicate         Boolean         @default(false)
  resolutionVerified  Boolean?
  verificationLog     String?
}

model Department {
  id         String      @id @default(cuid())
  name       String      @unique
  head       User?       @relation("DeptHead", fields: [headId], references: [id])
  headId     String?     @unique
  complaints Complaint[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Remark {
  id          String    @id @default(cuid())
  text        String
  authorName  String
  authorRole  Role
  imageUrl    String?
  complaint   Complaint @relation(fields: [complaintId], references: [id])
  complaintId String
  createdAt   DateTime  @default(now())
}

model Notification {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  type        String   // "COMPLAINT_REGISTERED", "STATUS_UPDATE", "RESOLVED"
  title       String
  message     String
  complaintId String?
  complaint   Complaint? @relation(fields: [complaintId], references: [id])
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  userId    String
  details   String?
  createdAt DateTime @default(now())
}
