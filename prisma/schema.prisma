// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CITIZEN
  OFFICER
  STATE_ADMIN
  DISTRICT_ADMIN
  CITY_ADMIN
  ADMIN // System Global Admin
}

enum ComplaintStatus {
  PENDING
  RESUMED
  IN_PROGRESS
  RESOLVED
  REJECTED
}

model User {
  id            String      @id @default(cuid())
  name          String?
  email         String      @unique
  password      String?
  emailVerified DateTime?
  role          Role        @default(CITIZEN)
  points        Int         @default(0)
  phone         String?
  address       String?
  bio           String?
  latitude      Float?
  longitude     Float?
  avatarUrl     String?
  
  // Tenancy
  state         State?      @relation(fields: [stateId], references: [id])
  stateId       String?
  district      District?   @relation(fields: [districtId], references: [id])
  districtId    String?
  city          City?       @relation(fields: [cityId], references: [id])
  cityId        String?
  ward          Ward?       @relation(fields: [wardId], references: [id])
  wardId        String?

  complaints    Complaint[]
  assignedTasks Complaint[] @relation("AssignedTo")
  managedDept   Department? @relation("DeptHead")
  notifications Notification[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model State {
  id        String     @id @default(cuid())
  name      String     @unique
  districts District[]
  users     User[]
  complaints Complaint[]
  budgetForecasts BudgetForecast[]
  budgetActuals    BudgetActual[]
  costOptimizations CostOptimization[]
  demandSurges     DemandSurge[]
}

model District {
  id        String     @id @default(cuid())
  name      String
  state     State      @relation(fields: [stateId], references: [id])
  stateId   String
  cities    City[]
  users     User[]
  complaints Complaint[]
  budgetForecasts BudgetForecast[]
  budgetActuals    BudgetActual[]
  costOptimizations CostOptimization[]
  demandSurges     DemandSurge[]

  @@unique([name, stateId])
}

model City {
  id         String     @id @default(cuid())
  name       String
  district   District   @relation(fields: [districtId], references: [id])
  districtId String
  wards      Ward[]
  users      User[]
  complaints Complaint[]

  @@unique([name, districtId])
}

model Ward {
  id         String     @id @default(cuid())
  name       String
  city       City       @relation(fields: [cityId], references: [id])
  cityId     String
  users      User[]
  complaints Complaint[]

  @@unique([name, cityId])
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model Complaint {
  id                  String          @id @default(cuid())
  ticketId            String          @unique
  title               String
  description         String
  originalText        String?
  originalLanguage    String?
  translatedText      String?
  status              ComplaintStatus @default(PENDING)
  severity            Int             @default(1) // 1-5
  category            String
  confidenceScore     Float?
  imageUrl            String?
  latitude            Float
  longitude           Float
  author              User            @relation(fields: [authorId], references: [id])
  authorId            String
  assignedTo          User?           @relation("AssignedTo", fields: [assignedToId], references: [id])
  assignedToId        String?
  department          Department?     @relation(fields: [departmentId], references: [id])
  departmentId        String?
  
  // Tenancy (denormalized for sharding & performance)
  state               State?          @relation(fields: [stateId], references: [id])
  stateId             String?
  district            District?       @relation(fields: [districtId], references: [id])
  districtId          String?
  city                City?           @relation(fields: [cityId], references: [id])
  cityId              String?
  ward                Ward?           @relation(fields: [wardId], references: [id])
  wardId              String?

  remarks             Remark[]
  notifications       Notification[]
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  duplicateOf         String?
  receiptId           String?         @unique
  
  // AI Governance Fields
  aiAnalysis          Json?           // Stores classification, confidence, category, reasoning
  spamScore           Float?          @default(0)
  isDuplicate         Boolean         @default(false)
  resolutionVerified  Boolean?
  verificationLog     String?
}

model Department {
  id         String      @id @default(cuid())
  name       String      @unique
  head       User?       @relation("DeptHead", fields: [headId], references: [id])
  headId     String?     @unique
  complaints Complaint[]
  budgetForecasts BudgetForecast[]
  budgetActuals    BudgetActual[]
  costOptimizations CostOptimization[]
  demandSurges     DemandSurge[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Remark {
  id          String    @id @default(cuid())
  text        String
  authorName  String
  authorRole  Role
  imageUrl    String?
  complaint   Complaint @relation(fields: [complaintId], references: [id])
  complaintId String
  createdAt   DateTime  @default(now())
}

model Notification {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  type        String   // "COMPLAINT_REGISTERED", "STATUS_UPDATE", "RESOLVED"
  title       String
  message     String
  complaintId String?
  complaint   Complaint? @relation(fields: [complaintId], references: [id])
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  userId    String
  details   String?
  createdAt DateTime @default(now())
}

// Budget Forecasting Models
model BudgetForecast {
  id              String   @id @default(cuid())
  period          String   // "2024-01", "2024-Q1", "2024-Annual"
  periodType      String   // "MONTHLY", "QUARTERLY", "ANNUAL"
  departmentId    String?
  department      Department? @relation(fields: [departmentId], references: [id])
  stateId         String?
  state           State?       @relation(fields: [stateId], references: [id])
  districtId      String?
  district        District?    @relation(fields: [districtId], references: [id])
  
  // Forecast values
  predictedAmount  Float
  actualAmount     Float?
  confidence       Float   // 0-1 confidence score
  modelVersion     String  // Version of forecasting model
  
  // Breakdown
  personnelCost    Float?
  infrastructureCost Float?
  operationalCost  Float?
  emergencyFund    Float?
  
  // Metadata
  forecastDate     DateTime @default(now())
  lastUpdated      DateTime @updatedAt
  createdBy        String
  status           String   @default("ACTIVE") // ACTIVE, ARCHIVED, SUPERSEDED
  
  // AI Insights
  insights         Json?    // AI-generated insights
  riskFactors      Json?    // Risk assessment
  recommendations  Json?    // Cost optimization recommendations
  
  @@unique([period, periodType, departmentId, stateId, districtId])
}

model BudgetActual {
  id              String   @id @default(cuid())
  period          String   // "2024-01", "2024-Q1", "2024-Annual"
  periodType      String   // "MONTHLY", "QUARTERLY", "ANNUAL"
  departmentId    String?
  department      Department? @relation(fields: [departmentId], references: [id])
  stateId         String?
  state           State?       @relation(fields: [stateId], references: [id])
  districtId      String?
  district        District?    @relation(fields: [districtId], references: [id])
  
  // Actual spending
  totalAmount     Float
  personnelCost    Float?
  infrastructureCost Float?
  operationalCost  Float?
  emergencySpent  Float?
  
  // Context
  complaintCount   Int?
  resolvedCount    Int?
  emergencyEvents  Int?
  
  recordedAt       DateTime @default(now())
  verifiedBy       String?
  notes            String?
}

model CostOptimization {
  id              String   @id @default(cuid())
  title           String
  description     String
  category        String   // "PERSONNEL", "INFRASTRUCTURE", "OPERATIONAL", "PROCUREMENT"
  priority        String   // "HIGH", "MEDIUM", "LOW"
  
  // Impact metrics
  potentialSavings Float
  implementationCost Float
  roi             Float    // Return on Investment
  timeframe       String   // "SHORT_TERM", "MEDIUM_TERM", "LONG_TERM"
  
  // Target scope
  departmentId    String?
  department      Department? @relation(fields: [departmentId], references: [id])
  stateId         String?
  state           State?       @relation(fields: [stateId], references: [id])
  districtId      String?
  district        District?    @relation(fields: [districtId], references: [id])
  
  // Status
  status          String   @default("PROPOSED") // PROPOSED, APPROVED, IMPLEMENTED, REJECTED
  approvedBy      String?
  approvedAt      DateTime?
  implementedBy   String?
  implementedAt   DateTime?
  
  // AI analysis
  aiConfidence    Float?
  aiReasoning     Json?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model DemandSurge {
  id              String   @id @default(cuid())
  title           String
  description     String
  severity        String   // "LOW", "MEDIUM", "HIGH", "CRITICAL"
  
  // Prediction details
  predictedStart  DateTime
  predictedEnd    DateTime
  confidence      Float   // 0-1 confidence score
  
  // Scope
  departmentId    String?
  department      Department? @relation(fields: [departmentId], references: [id])
  stateId         String?
  state           State?       @relation(fields: [stateId], references: [id])
  districtId      String?
  district        District?    @relation(fields: [districtId], references: [id])
  
  // Impact assessment
  estimatedComplaints Int?
  estimatedCost       Float?
  affectedAreas       Json?   // Geographic or service areas affected
  
  // Contributing factors
  factors         Json?   // Weather, events, seasonal trends, etc.
  
  // Status
  status          String   @default("PREDICTED") // PREDICTED, ACTIVE, RESOLVED, FALSE_ALARM
  actualStart     DateTime?
  actualEnd       DateTime?
  actualImpact    Json?
  
  // AI analysis
  modelVersion    String
  aiInsights      Json?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
